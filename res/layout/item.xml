		   android:text="Stock"
		   />
      <RadioButton android:id="@+id/radio_history"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:text="History"
		   />
      <RadioButton android:id="@+id/radio_archive"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:text="Archive"
		   />
    </RadioGroup>
